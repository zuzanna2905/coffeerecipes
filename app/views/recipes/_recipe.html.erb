<ul class='row'>
  <% obj.each { |recipe| %>
  <div class='card col s12 m6 l4'>
    <li class='left-align recipe'>
      <span class="title">
        <h5><%= recipe.roaster.name %>: <%= link_to recipe.bean.name, recipe_path(recipe)%></h5>
      </span>
      <div class='hide-on-small-only'>
        <p><%= truncate(recipe.description, length: 50) %></p>
        <p>Likes: <%= recipe.favorites.count %></p>
        <hr>
        <small>
          Created by <%= recipe.user.email%> <br>
          <%= time_ago_in_words(recipe.created_at) %> age,
          last updated: <%= time_ago_in_words(recipe.updated_at) %> ago</small>
      </div>
    </li>
  </div>
  <% } %>
</ul>