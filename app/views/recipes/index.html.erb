<div class='center-align'>
    <h4>Listing all recipes</h4>
    <%= form_tag recipes_path, method: :get do %>
        <p>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag "Search", :bean => nil %>
        </p>
    <% end %>
    <div>
        <%= will_paginate %>
    </div>
    <%= render 'recipe', obj: @recipes %>
    <div>
        <%= will_paginate %>
    </div>
</div>