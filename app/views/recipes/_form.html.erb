<%= render 'shared/errors', obj: @recipe%>

<div class='row'>
    <div class='col-xs-12'>
        <%= form_for(@recipe, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
        <div class='form-group'> 
            <div class='control-label col-sm-2'>
                <%= f.label :roaster %>
            </div>
            <div class='col-sm-8'>
                <%= f.text_field :roaster, class: 'form-control', placeholder: 'Coffee roaster', autofocus: true, required: true%>
            </div>
        </div>
        <div class='form-group'> 
            <div class='control-label col-sm-2'>
                <%= f.label :name %>
            </div>
            <div class='col-sm-8'>
                <%= f.text_field :name, class: 'form-control', placeholder: 'Name of coffee', autofocus: true, required: true %>
            </div>
        </div>
        <div class='form-group'> 
            <div class='control-label col-sm-2'>
                <%= f.label :temperature %>
            </div>
            <div class='col-sm-8'>
                <%= f.number_field :temperature, in: 60.0..100.0, step: 1.0, class: 'form-control', placeholder: 'Water temperature', required: true, autofocus: true %>
            </div>
        </div>
        <div class='form-group'> 
            <div class='control-label col-sm-2'>
                <%= f.label :water %>
            </div>
            <div class='col-sm-8'>
                <%= f.number_field :water, step: 10.0, class: 'form-control', placeholder: 'Water mililiters', autofocus: true, required: true %>
            </div>
        </div>
        <div class='form-group'> 
            <div class='control-label col-sm-2'>
                <%= f.label :dose %>
            </div>
            <div class='col-sm-8'>
                <%= f.number_field :dose, step: 0.1, class: 'form-control', placeholder: 'Coffee gramature', autofocus: true, required: true %>
            </div>
        </div>
        <div class='form-group'> 
            <div class='control-label col-sm-2'>
                <%= f.label :time %>
            </div>
            <div class='col-sm-8'>
                <%= f.time_field :time, class: 'form-control', placeholder: 'Pouring time', autofocus: true, required: true %>
            </div>
        </div>
        <div class='form-group'> 
            <div class='control-label col-sm-2'>
                <%= f.label :method %>
            </div>
            <div class='col-sm-8'>
                <%= f.text_field :method, class: 'form-control', placeholder: 'Making method', autofocus: true, required: true %>
            </div>
        </div>
        <div class='form-group'> 
            <div class='control-label col-sm-2'>
                <%= f.label :grinder %>
            </div>
            <div class='col-sm-8'>
                <%= f.text_field :grinder, class: 'form-control', placeholder: 'Grinder name', autofocus: true %>
            </div>
        </div>
        <div class='form-group'> 
            <div class='control-label col-sm-2'>
                <%= f.label :clicks %>
            </div>
            <div class='col-sm-8'>
                <%= f.number_field :clicks, step: 1, class: 'form-control', placeholder: 'Number of clicks', autofocus: true %>
            </div>
        </div>
        <div class='form-group'> 
            <div class='control-label col-sm-2'>
                <%= f.label :rate %>
            </div>
            <div class='col-sm-8'>
                <%= f.number_field :rate, in: 1.0..5.0, step: 0.5, class: 'form-control', placeholder: 'Rate of recipe', autofocus: true %>
            </div>
        </div>
        <div class='form-group'> 
            <div class='control-label col-sm-2'>
                <%= f.label :description %>
            </div>
            <div class='col-sm-8'>
                <%= f.text_area :description, class: 'form-control', rows: 10, placeholder: 'Description of recipe' %>
            </div>
        </div>
        <div class='form-group'> 
            <div class='col-sm-offset-2 col-sm-10'>
                <%= f.submit class: 'btn btn-success btn-lg'%>
            </div>
        </div>
        <% end %>
        <div class='col-sm-offset-2'>
            [ <%= link_to "Cancle request and return to recipes listing", recipes_path%> ]
        </div>
    </div>
</div>