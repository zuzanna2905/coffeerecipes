<% if obj.errors.any? %>
    <div class='row'>
        <div class='col s12 m6'>
            <div class='card blue-grey darken-1'>
                <div class='card-content white-text'>
                    <h2 class='panel-title'>
                        <%= pluralize(obj.errors.count, 'error')%>
                    </h2>
                </div>
                <div class='card-action'>
                    <ul>
                    <% obj.errors.full_messages.each { |msg| %>
                        <li> <%= msg %> <li>
                    <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
<% end%>