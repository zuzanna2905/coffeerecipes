<div class="row">
    <div class="col s12 m12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><h4><%= @user.name %></h4></span>   
        </div>
        <div class="card-action">
          <div class='row white-text'>       
            <div class='col m12 s12 l12'>
                <h5>List of coffee recipes</h5>
                <ul class='col s12 m6 offset-m4'>
                    <% @user.recipes.each { |recipe| %>
                            <li class='left-align'>
                                <%= link_to recipe.bean.name, recipe_path(recipe) %>
                            </li>
                    <% } %>
                </ul>
            </div>
          </div>
            <%= link_to "View all users", users_path, class: 'btn btn-info btn-sm' %>
        </div>
      </div>
    </div>
</div>