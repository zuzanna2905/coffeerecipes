<div class="row">
    <div class="col s12 m12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= @bean.roaster.name %>: <%= @bean.name %> </span>   
        </div>
        <div class="card-action">
          <div class='row white-text'>       
            <div class='col m6 s12 l4 offset-l1 left-align'>
                <p><% if @bean.name %> Name: <%= @bean.name %><%else%><%end%></p>
                <p><% if @bean.roaster %> Roasters:  <%= @bean.roaster.name %> <%else%><%end%></p>
                <p><% if @bean.country %>Country of coffee: <%= @bean.country %><%else%><%end%></p>
                <p><% if @bean.method %>Method of processing: <%= @bean.method %><%else%><%end%></p>
                <p><% if @bean.roast %>Level of roasting: <%= @bean.roast %><%else%><%end%></p>
                <p><% if @bean.description.length > 0 %> Description: <%= simple_format(@bean.description)%> <%else%><%end%></p>
            </div>
            <div class='col m6 l6 s12'>
            </div>
          </div>
            <% if is_admin? %>
              <%= link_to "Edit", edit_bean_path(@bean), class: 'btn btn-success btn-sm' %>  
              <%= link_to "Delete", bean_path(@bean), 
                  method: :delete, 
                  data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-sm'  %> 
            <% end %>
            <%= link_to "View all beans", beans_path, class: 'btn btn-info btn-sm' %>
        </div>
      </div>
    </div>
</div>