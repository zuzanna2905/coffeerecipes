<div class='container'>
    <div class='well col-xs-10 col-xs-offset-1 center'>
    <h3 class='title' class='well col-xs-10 col-xs-offset-1'><%= @bean.roaster.name %>: <%= @bean.name %> </h3>
        <div class='bean'>
            <div class='col-lg-6 col-lg-offset-1'>
            <% if @bean.name %> <p>Name: <%= @bean.name%></p> <%else%><%end%>
            <% if @bean.roaster %> <p>Roasters:  <%= @bean.roaster.name %></p> <%else%><%end%>
            <% if @bean.country %> <p>Country of coffee: <%= @bean.country%></p><%else%><%end%>
            <% if @bean.method %> <p>Method of processing: <%= @bean.method%> </p><%else%><%end%>
            <% if @bean.roast %> <p>Level of roasting: <%= @bean.roast%> </p><%else%><%end%>
            <% if @bean.description.length > 0 %> <p>Description: <%= simple_format(@bean.description)%></p><%else%><%end%>
            </div>
            <div class='text-center col-lg-12'>
            <hr>
            <%= link_to "Edit", edit_bean_path(@bean), class: 'btn btn-success btn-sm' %>  
            <%= link_to "Delete", bean_path(@bean), 
                method: :delete, 
                data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-sm'  %> 
            <%= link_to "View all beans", beans_path, class: 'btn btn-info btn-sm' %>
            </div>
        </div>
    </div>
</div>